<!doctype html>
		<html lang="en">
	<head>
		<link href="/css/tech_tennis.css" rel='stylesheet' type='text/css'>
		<script type="text/javascript" src="/js/jquery-1.7.1.js"></script>

		<script>
		
		</script>
		
			<script>
				$(document).ready(function() {
					$('#ready').hide();
					$('#multiplechoice').hide();
					
						$('#playasguestbutton').click(function(){
							$('#greeter').hide();
							$.getJSON('api/v1/question', processNewQuestion);
							$('#ready').fadeIn().delay(1200).fadeOut(function() {
								$("#multiplechoice").fadeIn();
							
							//end fade in multiple choice/create clock
						}); //end for prepare-to-play page
						}); //end of "play as guest" sequence
						
						function processNewQuestion(incoming_data) {
							var incoming_data2 = incoming_data;
							$('#question').html(incoming_data.question_data.question);
							$('#answer_a').html(incoming_data.question_data.answer_options[0]);
							$('#answer_b').html(incoming_data.question_data.answer_options[1]);
							$('#answer_c').html(incoming_data.question_data.answer_options[2]);
							$('#answer_d').html(incoming_data.question_data.answer_options[3]);
							$('#clock').load('/clock');
						}
							
							
									$('#a').click(function() {
										$.getJSON('/json', incoming_data2);	
										$.getJSON('/json', processNewQuestion);
										
										}); //end "a" click

										$('#b').click(function() {
											$.getJSON('/json', incoming_data2);	
											$.getJSON('/json', processNewQuestion);	
											}); //end "b" click

											$('#c').click(function() {
												$.getJSON('/json', incoming_data2);	
												$.getJSON('/json', processNewQuestion);	
												}); //end "c" click

												$('#d').click(function() {
													$.getJSON('/json', incoming_data2);	
													$.getJSON('/json', processNewQuestion);
													}); //end "d" click

														

							
						
				
				}); //end ready
			</script>
		
		<meta charset="utf-8">
		
		<title>Tech Tennis</title>

	</head>
	
	<body>
	
		
				
