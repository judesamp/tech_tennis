<!doctype html>
		<html lang="en">
	<head>
		<link href="/css/tech_tennis.css" rel='stylesheet' type='text/css'>
		<script type="text/javascript" src="/js/jquery-1.7.1.js"></script>
	
		
		
		
	
		
	
	
		
		
		
		
		<script>
	
		function processScore_NewQuestion(data) {		
				$(this).questionNumber = String(data[2]);
			$('#question').html(data.question_data.question);
			$('#answer_a').html(data.question_data.answer_options[0]);
			$('#answer_b').html(data.question_data.answer_options[1]);
			$('#answer_c').html(data.question_data.answer_options[2]);
			$('#answer_d').html(data.question_data.answer_options[3]);
			$('#clock').load('/clock');
			}
		</script>
		
			<script>
				$(document).ready(function() {
			
					
					
					$('#ready').hide();
					
					$('#multiplechoice').hide();
					
					
					
						$('#playasguestbutton').click(function(){
							$('#greeter').hide();
							$.getJSON('/json', processScore_NewQuestion);
							$('#ready').fadeIn().delay(1200).fadeOut(function() {
								
								 
								
								$("#multiplechoice").fadeIn();
							
							//end fade in multiple choice/create clock
						}); //end for prepare-to-play page
						}); //end of "play as guest" sequence
						
						
						$('#a').click(function() {
							$.getJSON('/json', "answer=a", processScore_NewQuestion);
							answer = "a";	
							}); //end "a" click
				
							$('#b').click(function() {
								$.getJSON('/json', 'answer=b', processScore_NewQuestion);
								answer = "b";	
								}); //end "a" click
								
								$('#c').click(function() {
									$.getJSON('/json', 'answer=c', processScore_NewQuestion);
									answer = "c";	
									}); //end "a" click
									
									$('#d').click(function() {
										$.getJSON('/json', 'answer=d', processScore_NewQuestion);
										answer = "d";	
										}); //end "a" click
				
						 //<input type="button" value="click me" 
						  //onclick="setTimeout('window.alert(\'Hello!\')', 2000)" />
					
						
								
				}); //end ready
				
				
				
				
				
			</script>
		
		<meta charset="utf-8">
		
		<title>Tech Tennis</title>

	</head>
	
	<body>
	
		
				
			<div id="nav">
				<ul id="navlist">
