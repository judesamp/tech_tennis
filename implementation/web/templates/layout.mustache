		<html lang="en">
	<head>
		<link href="/css/tech_tennis.css" rel='stylesheet' type='text/css'>
		<script type="text/javascript" src="/js/jquery-1.7.1.js"></script>
			<script>
				$(document).ready(function() {
					
					$('#scoreboard').fadeTo('normal', .25);
					
					$('#questions').hide(); //hide questions
					
					$('#hider').hide();
					$('#home').hover(function() {
								$('#hider').slideDown();
						});
					
					
						
					
