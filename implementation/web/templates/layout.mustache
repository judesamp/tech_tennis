							$('#greeter').toggle('slow');
							$('#questions').toggle('slow');
						});// play as guest
						
						//$(document).keypress(function(evt) {
						//	var x = evt.which;
						//	x = String.fromCharCode(x)
						//	alert(x); 
						// }); keypress return
						
						$('#scoreboard').click(function() {
							$(this).animate(
								{
									right: '500px'
								}, 4000, 'linear'
								
								
								);
							
							
						});
								
					
				
					
						
				}); //end ready
				
			
					
					
			
			</script>
		
		<meta charset="utf-8">
		
		<title>Tech Tennis</title>

	</head>
	
